<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reader - TempNote</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <main class="mb-4">
        <div class="container">
            <h1 class="text-center">Welcome to the Reader Page</h1>
            <p class="text-center">Explore and read amazing notes shared by our community!</p>
            <img src="/images/user-1.png" alt="Reader Image" class="img-fluid mx-auto d-block" style="max-width: 80%;">
            <p class="text-center mt-4">Join us in discovering a world of knowledge and creativity.</p>
        </div>
    </main>

    <div class="text-center mb-4">
        <button class="btn btn-primary mx-2" data-bs-toggle="modal" data-bs-target="#authModal" data-role="signup">Signup as Reader</button>
        <button class="btn btn-secondary mx-2" data-bs-toggle="modal" data-bs-target="#authModal" data-role="signin">Signin as Reader</button>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="authModal" tabindex="-1" aria-labelledby="authModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="authModalLabel">Authentication</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="authForm" action="" method="GET">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <button type="submit" class="btn btn-primary" id="authSubmit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const authModal = document.getElementById('authModal');
            const authForm = document.getElementById('authForm');
            const authSubmit = document.getElementById('authSubmit');

            authModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget; // Button that triggered the modal
                const role = button.getAttribute('data-role'); // Extract info from data-* attributes
                const actionUrl = role === 'signup' ? '/auth/google?role=reader&action=signup' : '/auth/google?role=reader&action=signin';
                
                authForm.action = actionUrl; // Set form action based on button clicked
                authSubmit.textContent = role === 'signup' ? 'Signup' : 'Signin'; // Change button text
            });
        });
    </script>
</body>
</html>
